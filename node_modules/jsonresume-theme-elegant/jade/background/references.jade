unless _.isEmpty(resume.references)
  .detail#references
    .icon
      i.fs-lg.icon-thumbs-up
      span.mobile-title References

    .info
      h4.title.text-uppercase References

      .content
        ul.list-unstyled
          - each reference_info in resume.references
            li.card.card-nested
              p: strong= reference_info.name

              blockquote.quote
                p.clear-margin= reference_info.reference
